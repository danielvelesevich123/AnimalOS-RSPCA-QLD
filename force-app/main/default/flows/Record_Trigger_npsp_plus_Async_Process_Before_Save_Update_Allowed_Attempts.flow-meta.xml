<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>ASSIGN_VAP_Values</name>
        <label>ASSIGN VAP Values</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <assignmentItems>
            <assignToReference>$Record.npsp_plus__Allowed_Attempts__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>50.0</numberValue>
            </value>
        </assignmentItems>
    </assignments>
    <description>This flow updates the Async Process record&apos;s Allowed Attempts to 20 to override the lag between Website Integration and npsp plus webhook handler</description>
    <environments>Default</environments>
    <interviewLabel>Record-Trigger: &lt;npsp plus Async Process&gt; Before Save - Update Allowed Attempts {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Record-Trigger: &lt;npsp plus Async Process&gt; Before Save - Update Allowed Attempts</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>ASSIGN_VAP_Values</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>npsp_plus__Processor__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>StripeInvoicePaymentSucceededProc</stringValue>
            </value>
        </filters>
        <filters>
            <field>npsp_plus__Allowed_Attempts__c</field>
            <operator>EqualTo</operator>
            <value>
                <numberValue>5.0</numberValue>
            </value>
        </filters>
        <filters>
            <field>npsp_plus__Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Retrying</stringValue>
            </value>
        </filters>
        <object>npsp_plus__Vertic_Async_Process__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
