<aura:component description="InsightRaffleDataImportModal" extends="c:vertic_Modal">

    <!-- Attribute Overrides -->
    <!-- <aura:set attribute="processor" value="vertic_GetPageReferenceContentProc"/> -->
    <!-- <aura:set attribute="hideContentOnBusy" value="{!false}"/> -->


    <!-- Attributes -->
    <!-- <aura:attribute name="params" type="Map" access="global" required="{!true}"/> -->

    <!-- Events -->
    <!-- <aura:registerEvent name="onSuccess" type="c:vertic_ComponentEvent"/>-->

    <!-- Handlers -->
    <!-- <aura:handler name="init" value="{!this}" action="{!c.handleInit}"/> -->

    <!-- Methods -->
    <!-- <aura:method name="refresh" action="{!c.handleInit}"></aura:method> -->
    <lightning:notificationsLibrary aura:id="notifLib"/>

    <div aura:id="form" class="slds-form" >

        <div class="slds-grid slds-wrap">
            <div class="slds-col slds-p-top_small slds-size_1-of-1">
                <span>As part of the Insight Raffle Ticket import process, two Campaign records need to be created.
                    The Campaign records will be associated with the imported Raffle Ticket Opportunity records.
                    Please provide Campaign Name values for the Ticket Purchase and Pet Supporter Campaigns below</span>
            </div>
            <div class="slds-col slds-p-top_small slds-size_1-of-1">
                <lightning:input name="ticketPurchaseCampaignName"
                                 label="Ticket Purchase Campaign Name"
                                 required="true"
                                 value="{! v.meta.dto.ticketPurchaseCampaignName }"/>
            </div>
            <div class="slds-col slds-p-top_small slds-size_1-of-1">
                <lightning:input name="petSupporterCampaignName"
                                 label="Pet Supporter Campaign Name"
                                 required="true"
                                 value="{! v.meta.dto.petSupporterCampaignName }"/>
            </div>
            <div class="slds-col slds-p-top_small slds-size_1-of-2">
                <lightning:input label="Start Date"
                                 type="date"
                                 class="slds-size_3-of-6"
                                 required="{!true}"
                                 value="{! v.meta.dto.startDate }"
                />
            </div>

            <div class="slds-col slds-p-top_small slds-size_1-of-2">
                <lightning:input label="End Date"
                                 type="date"
                                 class="slds-size_3-of-6"
                                 required="{!true}"
                                 value="{! v.meta.dto.endDate }"
                />
            </div>
        </div>

    </div>

    <aura:set attribute="footer">
        <lightning:button label="Cancel" type="button" onclick="{!c.handleCancelClick}"/>
        <lightning:button label="Submit" variant="brand" onclick="{!c.handleSaveClick}"/>
    </aura:set>

</aura:component>