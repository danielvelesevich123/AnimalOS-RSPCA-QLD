<aura:component description="Badges">

    <aura:attribute name="badges" type="List[]" access="public"/>
    <aura:attribute name="dynamicBadges" type="Aura.Component[]"></aura:attribute>

    <lightning:card class="slds-p-left_small slds-p-right_small">
        <div class="slds-grid">
            <aura:iteration items="{!v.badges}" var="badge">
                <div class="slds-m-right_xx-small" style="text-align: center;">
                    <lightning:icon iconName="{#badge.sldsIconName}"
                                    title="{#badge.title}"
                                    alternativeText="{#badge.title}"
                                    class="slds-m-bottom_xx-small"
                    />
<!--                    <aura:if isTrue="{#badge.title != null}">-->
<!--                        <span style="display: block; font-size: 10px;" class="{#badge.titleClasses}">{#badge.title}</span>-->
<!--                    </aura:if>-->
                </div>
            </aura:iteration>
            <aura:if isTrue="{!not(empty(v.dynamicBadges))}">
                {!v.dynamicBadges}
            </aura:if>
        </div>
    </lightning:card>


</aura:component>