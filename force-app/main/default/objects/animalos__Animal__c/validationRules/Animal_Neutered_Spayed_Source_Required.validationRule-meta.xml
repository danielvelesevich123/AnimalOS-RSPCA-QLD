<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Animal_Neutered_Spayed_Source_Required</fullName>
    <active>false</active>
    <description>Require a Neutered/Spayed Source where Neutered/Spayed has been ticked.</description>
    <errorConditionFormula>AND(
ISCHANGED(animalos__Neutered_Spayed__c),
animalos__Neutered_Spayed__c = TRUE,
ISBLANK(TEXT(animalos__Neutered_Spayed_Source__c))
)</errorConditionFormula>
    <errorDisplayField>animalos__Neutered_Spayed_Source__c</errorDisplayField>
    <errorMessage>A Neutered/Spayed Source must be set where Neutered/Spayed is ticked.</errorMessage>
</ValidationRule>
