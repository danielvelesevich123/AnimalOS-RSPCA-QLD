<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>Contact Us Form</description>
    <isExposed>true</isExposed>
    <masterLabel>Contact Us Form</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="customClass" type="String" label="Custom Class"/>
            <property datasource="Education, Partner, Volunteer" name="formType" type="String" label="Form Type" default="Partner"/>
            <property name="customMetadata" type="String" label="Portal Setting Name" default="Main"/>
            <property name="icon" type="String" label="Icon"/>
            <property name="header" type="String" label="Header"/>
            <property name="description" type="String" label="Description"/>
            <property name="thankYouMessage" type="String" label="Thank you message"/>
            <property name="hideWedgeShape" type="Boolean" label="Hide Wedge Shape"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>