<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <description>Section Header</description>
    <isExposed>true</isExposed>
    <masterLabel>Section Header</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="imageUrl" type="String" label="Image URL"/>
            <property name="imageKey" type="String" label="Image Content Key"/>
            <property name="isShapeImage" type="Boolean" label="Shaped Image"/>
            <property datasource=", Official RSPCA Left, Official RSPCA Right" name="pawPrintLabel" type="String" label="Background Paw Print"/>
            <property name="header" type="String" label="Header" required="true"/>
            <property name="subheader" type="String" label="Subheader"/>
            <property name="description" type="String" label="Description"/>
            <property name="headerMaxWidth" type="Integer" label="Custom Header Max Width"/>
            <property name="headerTextWidth" type="Integer" label="Custom Header Text Width"/>
            <property name="headerHeight" type="Integer" label="Custom Header Height"/>
            <property name="imageHeight" type="Integer" label="Custom Image Height"/>
            <property name="imageBottomAlign" type="Boolean" label="Image Bottom Align"/>
            <property name="quickLinksLabel" type="String" label="Links Label" default="Quick links"/>
            <property name="actionLinkLabel" type="String" label="Action Link Label"/>
            <property name="actionLinkIcon" type="String" label="Action Link Icon"/>
            <property name="actionLinkClass" type="String" label="Action Link Scroll Class"/>
            <property name="quickLinksString" type="String" label="Quick Links"/>
            <property name="isQuickLinksIconRight" type="Boolean" label="Link Icons on Right"/>
            <property name="learnMoreCardsString" type="String" label="Learn More Cards"/>
            <property name="infoCardsString" type="String" label="Information Cards"/>
            <property name="isSearchString" type="Boolean" label="Search String"/>
            <property name="isThankYouHeader" type="Boolean" label="Thank You Header"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>