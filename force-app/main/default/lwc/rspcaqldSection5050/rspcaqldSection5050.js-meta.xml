<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <description>Section Large Image Block</description>
    <isExposed>true</isExposed>
    <masterLabel>Section Large Image Block</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="customClass" type="String" label="Custom Class"/>
            <property name="imageUrl" type="String" label="Image URL"/>
            <property name="imageKey" type="String" label="Image Content Key"/>
            <property datasource="Shape One, Shape Two" name="imageShape" type="String" label="Image Shape"/>
            <property name="lr" type="Boolean" label="Image on Right"/>
            <property name="icon" type="String" label="Icon"/>
            <property datasource="Top, Bottom" name="iconPosition" type="String" label="Icon Position" default="Top"/>
            <property name="videoUrl" type="String" label="Video Link"/>
            <property name="subHeader" type="String" label="Subheader"/>
            <property name="header" type="String" label="Header"/>
            <property name="description" type="String" label="Description"/>
            <property name="isQuote" type="Boolean" label="Display as Quote"/>
            <property name="quoteAuthor" type="String" label="Quote Author"/>
            <property name="buttonLabel" type="String" label="Button Label"/>
            <property name="buttonLink" type="String" label="Button Link"/>
            <property name="buttonScrollClass" type="String" label="Button Scroll Class"/>
            <property name="quickLinksString" type="String" label="Quick Links"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>