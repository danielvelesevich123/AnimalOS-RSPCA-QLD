            <property name="fileNamePrefix" type="String" label="Prefix" description="Folder Name Prefix"/>
            <property name="fileNamePostfix" type="String" label="Postfix" description="Folder Name Postfix"/>
            <property name="acceptedFormats" type="String" label="Accepted Formats" description="Accepted Formats"/>
